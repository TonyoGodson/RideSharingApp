<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/car_iv"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/signup_tv"
        android:layout_marginTop="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_1"/>

    <TextView
        android:id="@+id/name_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/fascinate_inline"
        android:text="g~Ride"
        android:textColor="@color/black"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/signup_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/name_et"
        android:text="Sign Up"
        android:textSize="28sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"/>

    <EditText
        android:id="@+id/name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_above="@id/phone_et"
        android:padding="10dp"
        android:textSize="22sp"
        android:background="@drawable/border"
        android:hint="Name:"/>

    <EditText
        android:id="@+id/phone_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/email_et"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:inputType="phone"
        android:hint="Phone:"
        android:padding="10dp"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/email_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:layout_above="@id/passwordTextInputLayout"
        android:padding="10dp"
        android:textSize="22sp"
        android:background="@drawable/border"
        android:hint="Email:"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        app:hintTextColor="@color/black"
        android:layout_above="@id/submit_btn"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="22sp"
            android:background="@drawable/border"
            android:textColor="@color/black"
            android:hint="Password:"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:padding="10dp"
        android:textSize="22sp"
        android:backgroundTint="@color/black"
        android:text="Submit"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"/>

<!--    <TextView-->
<!--        android:id="@+id/or"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:layout_marginBottom="55dp"-->
<!--        android:text="already have an account?"-->
<!--        android:textColorHint="#E4D017"-->
<!--        android:textSize="16sp" />-->

    <TextView
        android:id="@+id/signup_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:layout_marginStart="5dp"
        android:text="Login"
        android:textStyle="bold|italic"
        android:textColorHint="#E4D017"
        android:textSize="14sp" />
</RelativeLayout>