<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RideShareApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/teal_700</item>
        <item name="android:textColorSecondary">@color/black</item>
        <!--        <item name="android:buttonStyle">@color/purple_500</item>-->
    </style>

    <style name="Theme.RideShareApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RideShareApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
<!--        <item name="android:textColorPrimary">@color/teal_700</item>-->
<!--        <item name="android:textColorSecondary">@color/black</item>-->
    </style>

    <style name="Theme.RideShareApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>